<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >


    <com.makeramen.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userSearchPicture"
        android:src="@drawable/logo_dark"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:layout_height="50dp"
        android:layout_width="50dp"
        app:corner_radius="30dip"
        app:mutate_background="true"
        app:oval="true" />


    <TextView android:id="@+id/user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/userSearchPicture"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <mehdi.sakout.fancybuttons.FancyButton
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:id="@+id/decline"
        android:layout_width="38dp"
        android:layout_height="38dp"
       android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:padding="10dp"
        android:layout_centerVertical="true"
        fancy:defaultColor="#d01716"
        fancy:focusColor="#f19897"
        fancy:iconResource="@drawable/ic_decline"
        fancy:radius="5dp"
        >
    </mehdi.sakout.fancybuttons.FancyButton>




            <mehdi.sakout.fancybuttons.FancyButton
                xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/accept"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toLeftOf="@id/decline"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:padding="5dp"
                fancy:defaultColor="#2baf2b"
                fancy:focusColor="#d7f3d7"
                fancy:iconPosition="left"
                fancy:iconResource="@drawable/ic_check"
                fancy:radius="5dp"
                >
            </mehdi.sakout.fancybuttons.FancyButton>





</RelativeLayout>